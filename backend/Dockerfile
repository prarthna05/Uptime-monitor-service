FROM node:18

WORKDIR /app

# COPY ALL THE DEPENDENCIES TO THE WORKDIR INSIDE THE CONTAINER
COPY package.json ./
COPY package-lock.json ./

# INSTALL ALL THE DEPENDENCIES

RUN npm install 

# COPY ALL THE FILES TO THE WORKDIR INSIDE THE CONTAINER
COPY . .

# EXPOSE THE PORT ON WHICH THE BACKEND SERVER WILL RUN
EXPOSE 5000

# START THE BACKEND SERVER
CMD ["node", "server.js"]
